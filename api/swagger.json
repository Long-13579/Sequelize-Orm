    ],
    "components": {
      "schemas": {
        "cinema": {
          "required": [
            "id", "Name", "Address", "ProvinceCity"
          ],
          "allOf": [
            {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer",
                  "description": "The auto-generated id of cinema"
                }
              }
            },
            {
              "$ref": "#/components/schemas/cinemaWithoutId"
            }
          ],
          "example": {
            "id": 1, 
            "name": "CGV",
            "address": "123 Nguyen Ba Hoc",
            "provinceCity": {
              "id": 1,
              "name": "Da Nang"
            }
          }
        },
        "provinceCity": {
          "type": "object",
          "required": [
            "id", "Name"
          ],
          "properties": {
            "id": {
              "type": "integer",
              "description": "The auto-generated id of province/city"
            },
            "name": {
              "type": "string",
              "description": "Name of province/city"
            }
          }
        },
        "provinceCityWithCinema": {
          "type": "object",
          "required": [
            "id", "Name"
          ],
          "properties": {
            "id": {
              "type": "integer",
              "description": "The auto-generated id of province/city"
            },
            "name": {
              "type": "string",
              "description": "Name of province/city"
            },
            "cinemas": {
              "type": "array",
              "items": {
                "$ref": "#/components/schemas/cinema"
              }
            }
          },
          "example": {
            "id": 1,
            "name": "Da Nang",
            "cinemas": [
              {
                "id": 1,
                "name": "CGV",
                "address": "123 Nguyen Ba Hoc",
                "provinceCityId": 1
              },
              {
                "id": 2,
                "name": "VGC",
                "address": "321 Nguyen Ba Hoc",
                "provinceCityId": 1
              }
            ]
          }
        },
        "screen": {
          "required": [
            "id"
          ],
          "allOf": [
            {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer",
                  "description": "The auto-generated id of screen"
                }
              }
            },
            {
              "$ref": "#/components/schemas/screenWithoutId"
            }
          ],
          "example": {
            "id": 1,
            "seatMatrix": "./screen1.txt",
            "cinemaId": 1
          }
        },
        "screenWithoutId": {
          "type": "object",
          "required": [
            "seatMatrix", "cinemaId"
          ],
          "properties": {
            "seatMatrix": {
              "type": "string",
              "description": "Path of file seat matrix"
