            "cinemaId": {
              "type": "integer",
              "description": "The id of cinema"
            }
          },
          "example": {
            "seatMatrix": "./screen1.txt",
            "cinemaId": 1
          }
        },
        "cinemaWithoutId": {
          "type": "object",
          "required": [
            "name", "address", "provinceCityId"
          ],
          "properties": {
            "name": {
              "type": "string",
              "description": "Name of cinema"
            },
            "address": {
              "type": "string",
              "description": "Address of cinema"
            },
            "provinceCityId": {
              "type": "integer",
              "description": "Id of province/city"
            }
          },
          "example": {
            "name": "CGV",
            "address": "123 Nguyen Ba Hoc",
            "provinceCityId": 1
          }
        },
        "show": {
          "required": [
            "id"
          ],
          "allOf": [
            {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer",
                  "description": "The auto-generated id of show"
                }
              }
            },
            {
              "$ref": "#/components/schemas/showWithoutId"
            }
          ],
          "example": {
            "id": 1,
            "filmId": 1,
            "screenId": 1,
            "timeStart": "2024-06-25",
            "price": 300,
            "seatMatrix": "./seatMatrix.txt",
            "formatId": 1,
            "subtitle": true,
            "dubbing": true
