          "type": "object",
          "properties": {
            "id": {
              "type": "integer"
            },
            "poster": {
              "type": "string"
            },
            "ageRating": {
              "type": "string"
            },
            "format": {
              "type": "string"
            },
            "title": {
              "type": "string"
            },
            "trailerLink": {
              "type": "string"
            },
            "category": {
              "type": "string"
            },
            "nation": {
              "type": "string"
            },
            "subtitle": {
              "type": "string"
            },
            "duration": {
              "type": "integer"
