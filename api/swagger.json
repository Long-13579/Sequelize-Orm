        },
        "showWithoutId": {
          "required": [
            "filmId",
            "screenId", 
            "timeStart",
            "price", 
            "seatMatrix", 
            "formatId", 
            "subtitle", 
            "dubbing"
          ],
          "type": "object",
          "properties": {
            "filmId": {
              "type": "integer",
              "description": "The film's id of this show"
            },
            "screenId": {
              "type": "integer",
              "description": "The screen's id of this show"
            },
            "timeStart": {
              "type": "string",
              "description": "The start time of this show"
            },
            "price": {
              "type": "integer",
              "description": "The price of this show"
            },
            "seatMatrix": {
              "type": "string",
              "description": "Path of file seat matrix"
            },
            "formatId": {
              "type": "integer",
              "description": "The id of format"
            },
            "subtitle": {
              "type": "boolean",
              "description": "True is have subtitle, false is have not subtile"
            },
            "dubbing": {
              "type": "boolean",
              "description": "True is have dubbing, false is have not dubbing"
            }
          },
          "example": {
            "filmId": 1,
            "screenId": 1,
            "timeStart": "2024-06-25",
            "price": 300,
            "seatMatrix": "./seatMatrix.txt",
            "formatId": 1,
            "subtile": true,
            "dubbing": true
          }
        },
        "film": {
          "required": ["id"],
          "allOf": [
            {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer",
                  "description": "The auto-generated id of film"
                }
              }
            },
            {
              "$ref": "#/components/schemas/filmWithoutId"
            }
          ],
          "example": {
            "id": 1,
            "filmName": "Absolute cinema",
            "duration": 300,
            "dateSrart": "2024-06-25",
            "dateEnd": "2024-06-26",
            "director": "Absolute director",
            "actor": "Absolute actors",
            "subtile": true,
            "language": "English",
            "rateId": 1,
            "poster": "./poster.jpeg",
            "trailer": "./trailer.mp4"
