        "filmWithoutId": {
          "required": [
            "filmName",
            "duration",
            "dateStart",
            "dateEnd",
            "director",
            "actor",
            "subtile",
            "language",
            "rateId",
            "poster",
            "trailer"
          ],
          "type": "object",
          "properties": {
            "filmName": {
              "type": "string",
              "description": "The name of film"
            },
            "duration": {
              "type": "integer",
              "description": "The duration of film"
            },
            "dateStart": {
              "type": "string",
              "description": "The date start of film"
            },
            "dateEnd": {
              "type": "string",
              "description": "The date start of film"
            },
            "director": {
              "type": "string",
              "description": "The director of film"
            },
            "actor": {
              "type": "string",
              "description": "The actors of film"
            },
            "subtile": {
              "type": "boolean",
              "description": "True when film have subtitle"
            },
            "language": {
              "type": "string",
              "description": "The language of film"
            },
            "rateId": {
              "type": "integer",
              "description": "The rate of the film"
            },
            "poster": {
              "type": "string",
              "description": "The path of the poster file"
            },
            "trailer": {
              "type": "string",
              "description": "The path of the trailer video"
            }
          },
          "example": {
            "filmName": "Absolute cinema",
            "duration": 300,
            "dateSrart": "2024-06-25",
            "dateEnd": "2024-06-26",
            "director": "Absolute director",
            "actor": "Absolute actors",
            "subtile": true,
            "language": "English",
            "rateId": 1,
            "poster": "./poster.jpeg",
            "trailer": "./trailer.mp4"
